<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <Button
            android:id="@+id/notif_basic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notificación básica" />

        <Button
            android:id="@+id/notif_push"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notificación con acción de toque" />

        <Button
            android:id="@+id/notif_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancelar notificación" />

        <Button
            android:id="@+id/notif_big_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notificación con Imagen Grande" />

        <Button
            android:id="@+id/notif_big_little_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notificación con imagen grande y miniatura" />

        <Button
            android:id="@+id/notif_big_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notificación Texto Grande" />

        <Button
            android:id="@+id/notif_bandeja"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notificación Bandeja de Entrada" />

        <Button
            android:id="@+id/notif_conversacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notificación Conversación" />

        <Button
            android:id="@+id/notif_multimedia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notificación Multimedia" />

        <Button
            android:id="@+id/notif_pending_normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notificación PendingIntent Normal" />

        <Button
            android:id="@+id/notif_pending_especial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notificación PendingIntent Especial" />

        <Button
            android:id="@+id/notif_custom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notificación Personalizada" />

        <Button
            android:id="@+id/notif_sound"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notificación con sonido, vibración y luz" />
    </LinearLayout>
</ScrollView>