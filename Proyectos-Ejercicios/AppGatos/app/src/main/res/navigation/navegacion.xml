<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navegacion"
    app:startDestination="@id/mainActivity">

    <activity
        android:id="@+id/mainActivity"
        android:name="com.example.appgatos.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main" />
    <fragment
        android:id="@+id/infoCat"
        android:name="com.example.appgatos.infoCat"
        android:label="fragment_info_cat"
        tools:layout="@layout/fragment_info_cat" >
        <action
            android:id="@+id/action_infoCat_to_tab1"
            app:destination="@id/tab1" />
        <action
            android:id="@+id/action_infoCat_to_tab2"
            app:destination="@id/tab2" />
    </fragment>
    <fragment
        android:id="@+id/tab1"
        android:name="com.example.appgatos.tab1"
        android:label="fragment_tab1"
        tools:layout="@layout/fragment_tab1" />
    <fragment
        android:id="@+id/tab2"
        android:name="com.example.appgatos.tab2"
        android:label="fragment_tab2"
        tools:layout="@layout/fragment_tab2" />
</navigation>